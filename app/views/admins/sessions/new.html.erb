<h2>Ingresar</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, :placeholder => 'Correo...' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => 'ContraseÃ±a...'  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recordarme" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Ingresar" %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
