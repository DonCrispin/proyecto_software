<%= form_for([@book, @copy], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @copy.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@copy.errors.count, "error") %> prohibieron el ejemplar de ser guardado:</h4>

      <ul>
      <% @copy.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-15">
      <%= f.date_field :year, class: "form-control", autofocus: true, :placeholder => 'Año...' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-15">
      <%= f.text_field :location, class: "form-control", :placeholder => 'Ubicación...' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-15">
      <%= f.submit "Guardar Ejemplar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
