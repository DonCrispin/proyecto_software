<%= form_for(@book, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @book.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@book.errors.count, "error") %> prohibieron el libro de ser guardado:</h4>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-15">
      <%= f.text_field :title, class: "form-control", autofocus: true, :placeholder => 'TÃ­tulo...' %>
    </div>
  </div>
  <div class="field field_select">
    <%= f.label :author_id, "Autor" %>
    <%= f.collection_select(:author_id, Author.all, :id, :name) %>
  </div>
  <div class="field field_select">
    <%= f.label :theme_id, "Tema" %>
    <%= f.collection_select(:theme_id, Theme.all, :id, :name) %>
  </div>
  <div class="field field_select">
    <%= f.label :editorial_id, "Editorial" %>
    <%= f.collection_select(:editorial_id, Editorial.all, :id, :name) %>
  </div>
  <div class="field field_avatar">
      <%= f.file_field :avatar, :class => "inputfile" %>
      <label for="book_avatar" class="upload">Seleccionar Archivo</label>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control", :placeholder => 'Description...' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-15">
      <%= f.submit "Guardar Libro", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
